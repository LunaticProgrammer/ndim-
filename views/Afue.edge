<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="A portfolio template that uses Material Design Lite.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>NDIM Events</title>
    <style>
        td { white-space:pre }
    </style>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.grey-pink.min.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
     <!-- Compiled and minified CSS -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">

     <!-- Compiled and minified JavaScript -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
</head>

<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header mdl-layout__header--waterfall portfolio-header">
            <div class="mdl-layout__header-row portfolio-logo-row">
                <span class="mdl-layout__title">
                    <div class="portfolio-logo"></div>
                    <span class="mdl-layout__title"><B>New Delhi Institute of Managment</B></span>
                </span>
            </div>
            <div class="mdl-layout__header-row portfolio-navigation-row" style="text-align: center;">
                <nav class="mdl-navigation mdl-typography--body-1-force-preferred-font">
                    <label style="color: white; font-size: 20px; margin-left: 25%; "><b>Announcements For Upcoming Events</b></label>
                    
                </nav>
                <a class="waves-effect waves-light btn-large"  href="/login" style=" left:100px">ADMIN LOGIN</a>
            </div>
           
        </header>
        
        <main class="mdl-layout__content">
            <div>
                    <div style="background-color: #edeff2; margin-left: 20%; margin-right: 20%; margin-top: 5%;">
                   <br>
                   <br>
                   <br>
                   <form action="/event/sort" method="POST">
                    <div class="row">
                   <label style="margin-left: 14%;"><b>Select Category</b></label>
                   <select class="browser-default" name="category" style="width: 50%; margin-left: 14%;">
                     <option value="" disabled selected>Choose Event Category</option>
                     <option value="Academic">Academic</option>
                     <option value="Placement">Placement</option>
                     <option value="Examination">Examination</option>
                     <option value="Administration">Administration</option>
                     <option value="Registrar">Registrar</option>
                     <option value="Dean">Dean</option>
                     <option value="3">Add</option>
                     <option value="3">Add</option>
                     <option value="3">Add</option>
                     <option value="3">Add</option>
               
                   </select>
                   <br>
                   <button style="margin-left:14%" class="waves-effect waves-light btn"> Sort </button>
                    </div>
                   </form>
<br>
<br>
<br>
<br>


                        <label style="margin-left: 14%;font-size: 16px;"><b>Search Event By Event Name/code</b></label>

        <form action="/event/search" style="margin-left: 14%;" method="POST" >
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable" >
            <label class="mdl-button mdl-js-button mdl-button--icon" for="sample6" >
            <i class="material-icons">search</i>
        </label>
          <div class="mdl-textfield__expandable-holder">
            <input class="mdl-textfield__input" type="text" id="sample6" name="eventcode" style="width: 232%;">
            <label class="mdl-textfield__label" for="sample-expandable" >Search Here...</label>
          </div>
        </div>
      </form>
     
    </form>              
 </div>
            </div>
            <div>
                <hr style="width: 60%; margin-left: 20%">
                    <table style="background-color: #edeff2; margin-left: 10% ;margin-right: 10%; width: 80%; border: 1px solid  rgb(25, 25, 26);">
                            <tr class="bottom">
                                <th > EVENT CODE </th>
                                <th> EVENT NAME</th>
                                <th> EVENT DETAILS </th>
                                <th> EVENT CATEGORY </th>
                                <th> LAST DATE TO APPLY </th>
                                <th> APPLY HERE </th>
                            </tr>
                            
            @each(event in post)

            
                <tr>
                    
                <td> {{ event.eventcode }} </td>
                <td> {{event.eventname}} </td>
                <td> {{ event.eventdetails }} </td>
                <td> {{ event.category }} </td>
                <td> {{ event.date.toDateString() }} </td> 
                
                <td> <form action="/otp" method="post"><input hidden name="_id" id="popup" type="text" value={{ event._id }}><button class="waves-effect waves-light btn"> Apply </button> </form> </td>

                </tr>

            @endeach
        </table>
           <br>
           <br>
            </div>
        </main>
    </div>
    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
</body>

</html>
